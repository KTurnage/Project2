<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">FILO</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#"></a></li>
                <li><a href="#"></a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="account.html"><span class="glyphicon glyphicon-user"></span> Account</a></li>
            </ul>
        </div>
    </nav>

    <div class="container h-100 d-flex">
        <div class="jumbotron my-auto">
            <h1 class="display-3">Welcome to FILO Trip Planner</h1>
            <p class="lead">Select a location on the map to begin planning you next adventure!</p>
        </div>
    </div>
    
    <div id="map" class="my-auto"></div>
    <script>
      function initMap(){
        // Map options
        var options = {
          zoom:7.5,
          center:{lat:39.119,lng:-105.473}
        }
        // New map
        var map = new google.maps.Map(document.getElementById('map'), options);
  
       
        // Array of markers
        var markers = [
         {
            coords:{lat:40.342,lng:-105.683},
            iconImage:'assets/icon/peak.png',
            content:'<h1><a href="/rmnp.hbs">Rocky Mountain NP</a></h1>',
            animation:google.maps.Animation.Drop,
          },
          
          {
            coords:{lat:37.791,lng:-105.594},

            iconImage:'assets/icon/peak.png',
            content:'<h1><a href"/pages/pikespeak.html>Great Sand Dunes</a></h1>',
            animation:google.maps.Animation.Drop,
          },
          {
            coords:{lat:38.575,lng:-107.741},
            content:'<h1><a href"/pages/BCGNP.html>Black Canyon NP</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          
          {
            coords:{lat:37.811,lng:-107.664},
            content:'<h1><a href"/pages/silverton.html>Silverton</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:39.070, lng:-106.989},
            content:'<h1><a href"/pages/mbells.html>Maroon Bells</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:39.063,lng:-108.550},
            content:'<h1><a href"/pages/GJ.html>Grand Junction</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:37.230,lng:-108.461},
            content:'<h1><a href"/pages/mesaverdenp.html>Mesa Verde</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:38.878,lng:-104.869},
            content:'<h1><a href"/pages/gardenofthegods.html>Garden Of The Gods</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:38.840,lng:-105.042},
            content:'<h1><a href"/pages/pikespeak.html>Pikes Peak</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:37.275,lng:-107.880},
            content:'<h1><a href"/pages/durango.html>Durango</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:38.022,lng:-107.671},
            content:'<h1><a href"/pages/ouray.html>Ouray</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:39.588,lng:-105.643},
            content:'<h1><a href"/pages/mtevans.html>Mt. Evans</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:40.377,lng:-105.521},
            content:'<h1><a href"/pages/estespark.html>Estes Park</a></h1>',
            iconImage:'assets/icon/peak.png',

          },
          {
            coords:{lat:40.252,lng:-105.823},
            content:'<h1><a href"/pages/grandlake.html>Grand Lake</a></h1>',
            iconImage:'assets/icon/peak.png',

          }
        ];

        // Loop through markers
        for(var i = 0;i < markers.length;i++){
          // Add marker
          addMarker(markers[i]);
        }
 
        // Add Marker Function
        function addMarker(props){
          var marker = new google.maps.Marker({
            position:props.coords,
            map:map,
          });
  
          // Check for customicon
          if(props.iconImage){
            // Set icon image
            marker.setIcon(props.iconImage);
          }
  
          // Check content
          if(props.content){
            var infoWindow = new google.maps.InfoWindow({
              content:props.content
            });
  
            marker.addListener('click', function(){
              infoWindow.open(map, marker);
            });
          }
        }
      }
    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDVfz1tDynEKQWU6L7t3J84U2APeCJEH8&callback=initMap">
      </script>



</body>

</html>